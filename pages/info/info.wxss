.infos {
    padding: 60rpx 20rpx;
}

.i-item {
    display: flex;
    flex-direction: column;
    margin-bottom: 60rpx;
    padding: 20rpx 35rpx;
    border: 1rpx solid #ddd;
    border-radius: 10rpx;
    background-color: #fff;
}

.i-item:last-child {
    margin-bottom: 0;
}

.title {
    font-size: 40rpx;
    color: #222;
}

.date {
    margin-bottom: 10rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
    color: #888;
}

.img {
    width: 100%;
    height: 300rpx;
    margin: 10rpx 0;
}

.sum {
    margin-bottom: 10rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 28rpx;
    color: #444;
}

.all {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #333;
    font-size: 30rpx;
}

.all::after {
    content: '';
    width: 10rpx;
    height: 10rpx;
    border: 0 solid #bbb;
    border-width: 3rpx 3rpx 0 0;
    transform: matrix(1, 1, -1, 1, 0, 0);
}