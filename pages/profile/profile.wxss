/* pages/profile/profile.wxss */
.avatar {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 400rpx;
    background-color: #fff;
}

.a-img {
    width: 220rpx;
    height: 220rpx;
    border-radius: 50%;
    box-shadow: 0 0 10rpx #777f92;
}

.a-btn {
    width: auto;
}

.cells {
    margin-top: 20rpx;
}

.c-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 40rpx;
    padding: 20rpx 30rpx;
    font-size: 30rpx;
    border-bottom: 1rpx solid #eee;
    background-color: #fff;
}

.c-item::after {
    content: '';
    width: 10rpx;
    height: 10rpx;
    border: 0 solid #bbb;
    border-width: 3rpx 3rpx 0 0;
    transform: matrix(1, 1, -1, 1, 0, 0);
}

.c-div {
    height: 20rpx;
    box-shadow: inset 0 1rpx 2rpx #eee; 
}